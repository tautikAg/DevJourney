# API Keys
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# MCP Configuration
MCP_HOST=localhost
MCP_PORT=8000

# Application Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
DATA_DIR=./data
SYNC_INTERVAL=3600  # Sync interval in seconds (default: 1 hour)

# Extraction Settings
CLAUDE_HISTORY_PATH=~/.claude/history
CURSOR_HISTORY_PATH=~/.cursor/chat_history

# Analysis Settings
MIN_CONFIDENCE_THRESHOLD=0.7
ENABLE_ADVANCED_ANALYSIS=true

# Notion Database Settings
DAILY_LOG_DATABASE_ID=your_daily_log_database_id_here
PROBLEM_SOLUTION_DATABASE_ID=your_problem_solution_database_id_here
KNOWLEDGE_BASE_DATABASE_ID=your_knowledge_base_database_id_here
PROJECT_TRACKING_DATABASE_ID=your_project_tracking_database_id_here

# UI Settings
ENABLE_SYSTEM_TRAY=true
ENABLE_NOTIFICATIONS=true
